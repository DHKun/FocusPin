{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "FocusPin",
  "version": "2.0.0",
  "identifier": "com.focuspin.dev",
  "build": {
    "frontendDist": "../dist/src",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:3001/src/index.html"
  },
  "app": {
    "windows": [
      {
        "title": "FocusPin",
        "width": 350,
        "height": 450,
        "resizable": false,
        "fullscreen": false,
        "alwaysOnTop": false,
        "decorations": false,
        "transparent": true,
        "skipTaskbar": true,
        "center": true,
        "dragDropEnabled": false,
        "visibleOnAllWorkspaces": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
